<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <title>Chat - Users</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-screen h-screen flex text-whit">
        <div class="w-[350px]">
            <%- include("../layouts/sidebar")  %> 
        </div>
        <div class="w-full">
            <%- include("../layouts/header")  %> 
            <div class="m-10">
                <div class="">
                    <h1 class="text-2xl font-medium ">All Users </h1>
                </div>
                <br>
                <div class="border border-blac p-3 flex flex-col gap-y-4 shadow-md bg-gray-50">
                    <div class="self-end mt-2">
                        <a href="/user/create" class="bg-gray-800 w-max self-end text-white mb-3 p-2 rounded-full">New User</a>
                    </div>
                    <hr>
                    <div class="flex flex-wrap gap-y-4 gap-x-5">
                        <div class="border border-gray-300 rounded w-[100%]">
                            <table class="w-full">
                                <thead class="border-b border-gray-300 bg-gray-100">
                                    <tr>
                                        <th class="px-3 text-start">Name</th>
                                        <th class="px-3 text-start">Email</th>
                                        <th class="px-3 text-start">Created at</th>
                                        <th class="px-3 text-start">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(user => {%> 
                                        <tr class="bg-gray-100">
                                            <td class="px-3 text-start font-semibold"><%- user.name %> </td>
                                            <td class="px-3 text-start font-semibold"><%- user.email %> </td>
                                            <td class="px-3 text-start font-semibold"><%- user.getFormattedCreatedAt() %> </td>
                                            <td class="px-3 text-start flex gap-x-2">
                                                <a href="/user/<%- user.id %>">
                                                    <button><i class="bi bi-eye"></i></button>
                                                </a>
                                                <a href="/user/edit/<%- user.id %>">
                                                    <button><i class="bi bi-pencil-square"></i></button>
                                                </a>
                                                <form method="POST" action="#"> 
                                                    <button><i class="bi bi-trash3-fill"></i></button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% });  %> 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <%- include("../layouts/footer")  %> 
        </div>
    </div>
    

</body>
</html>